.page-wrap{padding:24rpx}
.header{font-size:36rpx;font-weight:600;color:#333;margin-bottom:12rpx}
.sub{font-size:24rpx;color:#8a8a8a;margin-bottom:24rpx}
.card{background:#fff;border-radius:20rpx;box-shadow:0 12rpx 32rpx rgba(0,0,0,0.06);padding:24rpx;margin-bottom:20rpx}
.list{display:flex;flex-direction:column;gap:16rpx}
.list-item{display:flex;justify-content:space-between;align-items:center}
.badge{display:inline-block;padding:8rpx 16rpx;border-radius:999rpx;font-size:22rpx}
.badge-meat{background:#ffe1e9;color:#d43f65}
.badge-veg{background:#dff5ea;color:#2f8f61}
.btn{border:none;border-radius:16rpx;padding:20rpx 24rpx;font-size:28rpx}
.btn-primary{background:#ff7a45;color:#fff}
.btn-secondary{background:#7dcfb6;color:#fff}
.error{color:#d43f65;background:#ffecec;border-radius:12rpx;padding:12rpx}