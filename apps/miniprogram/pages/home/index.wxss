.page{min-height:100vh;background:linear-gradient(135deg,#ffd1dc 0%,#ffe7c6 100%);position:relative;padding:48rpx 32rpx;box-sizing:border-box}
.hero{text-align:center;margin-top:40rpx}
.logo{font-size:48rpx;font-weight:600;color:#333}
.slogan{margin-top:12rpx;color:#7a7a7a;font-size:26rpx}
.card{margin:48rpx auto 0;background:rgba(255,255,255,0.85);backdrop-filter:saturate(180%) blur(6px);border-radius:24rpx;box-shadow:0 12rpx 40rpx rgba(0,0,0,0.08);padding:32rpx;max-width:680rpx}
.roles{display:flex;gap:24rpx;justify-content:center;margin-bottom:24rpx}
.role{border:none;border-radius:999rpx;padding:20rpx 40rpx;font-size:28rpx}
.husband{background:#7dcfb6;color:#fff}
.wife{background:#f78fb3;color:#fff}
.primary{margin-top:8rpx;background:#ff7a45;color:#fff;border:none;border-radius:16rpx;padding:24rpx;font-size:30rpx}
.tip{text-align:center;color:#999;margin-top:16rpx;font-size:24rpx}
.decor{position:absolute;border-radius:50%;opacity:0.25}
.decor1{width:240rpx;height:240rpx;background:#f78fb3;bottom:40rpx;left:-60rpx}
.decor2{width:200rpx;height:200rpx;background:#7dcfb6;top:-40rpx;right:-60rpx}