<view class="page">
  
  <view class="banner">
    <view class="chef"></view>
    <view class="banner-title">零花钱厨房</view>
    <view class="banner-sub">简洁点餐 · 轻松管理</view>
  </view>
  <view class="login-card card">
    <view class="login-left">
      <view class="avatar">👤</view>
      <view class="login-text">账号状态</view>
    </view>
    <view class="login-right">
      <view class="status-pill {{logged?'ok':'warn'}}">{{logged?'已登录':'未登录'}}</view>
      <navigator wx:if="{{!logged}}" url="/pages/profile/index" class="status-action">去登录</navigator>
    </view>
  </view>
  <view class="section-title">常用功能</view>
  <view class="grid">
    <navigator url="/pages/order/index" class="grid-card">
      <view class="grid-icon">🍽️</view>
      <view class="grid-text">堂食点餐</view>
    </navigator>
    <navigator url="/pages/orders/index?tab=available" class="grid-card">
      <view class="grid-icon">🏃</view>
      <view class="grid-text">外送接单</view>
    </navigator>
  </view>
  <view class="section-title">更多</view>
  <view class="grid small">
    <navigator url="/pages/orders/index" class="grid-mini" open-type="navigate">
      <view class="mini-icon">🔔</view>
      <view class="mini-text">订单列表</view>
    </navigator>
    <navigator url="/pages/ai-order/index" class="grid-mini" open-type="navigate">
      <view class="mini-icon">🧠</view>
      <view class="mini-text">AI点餐</view>
    </navigator>
    <navigator url="/pages/menu/index" class="grid-mini" open-type="navigate">
      <view class="mini-icon">📒</view>
      <view class="mini-text">菜单</view>
    </navigator>
  </view>
  <view class="tabbar">
    <view class="tab-item" bindtap="goHome">
      <view class="tab-icon">🏠</view>
      <view class="tab-text">首页</view>
    </view>
    <navigator url="/pages/order/index" class="tab-item">
      <view class="tab-icon">🍽️</view>
      <view class="tab-text">点餐</view>
    </navigator>
    <navigator url="/pages/orders/index" class="tab-item">
      <view class="tab-icon">📋</view>
      <view class="tab-text">订单</view>
    </navigator>
    <navigator url="/pages/profile/index" class="tab-item">
      <view class="tab-icon">👤</view>
      <view class="tab-text">我的</view>
    </navigator>
  </view>
</view>
