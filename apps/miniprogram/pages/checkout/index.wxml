<view class="checkout-page">
  <!-- 去除桌号/人数信息展示 -->

  <view class="list card">
    <view class="list-title">用餐列表</view>
    <view wx:for="{{items}}" wx:key="id" class="dish">
      <view class="dish-left">
        <view class="dish-thumb"></view>
        <view class="dish-meta">
          <view class="dish-name">{{item.name}}</view>
          <view class="dish-sub">默认口味</view>
        </view>
      </view>
      <view class="dish-right">
        <view class="dish-price">¥{{item.priceDisplay}}/份</view>
        <view class="qty-wrap">
          <button class="qty-btn" data-id="{{item.id}}" bindtap="decItem">－</button>
          <view class="qty-num">{{item.qty}}</view>
          <button class="qty-btn" data-id="{{item.id}}" bindtap="incItem">＋</button>
        </view>
        <button class="del-btn" data-id="{{item.id}}" bindtap="removeItem">删除</button>
      </view>
    </view>
    <button class="add-btn" bindtap="continueAdd">＋ 继续加菜</button>
  </view>

  <view class="summary card">
    <view class="row strong">
      <view>小计</view>
      <view>¥{{subTotalDisplay}}</view>
    </view>
  </view>

  <view class="footer">
    <view class="total-pill">合计 ¥{{totalDisplay}}</view>
    <button class="pay-btn" bindtap="goPay">提交支付</button>
  </view>

  <view class="remark-wrap">
    <input class="remark" placeholder="请输入订单备注……" bindinput="onRemark" value="{{remark}}" />
    <view class="info-edit">
      <input class="edit-input" placeholder="联系电话" type="number" bindinput="onPhone" value="{{phone}}" />
    </view>
  </view>
</view>
