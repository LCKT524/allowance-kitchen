@import "../../styles/theme.wxss";
.checkout-page{padding:24rpx 24rpx 180rpx}
.info .info-line{display:flex;align-items:center;gap:16rpx;color:#333;font-size:28rpx}
.info .strong{font-weight:600}
.info .sep{margin-left:12rpx;color:#666}
.info-sub{margin-top:8rpx;color:#999;font-size:24rpx}

.list-title{font-size:28rpx;color:#666;margin-bottom:12rpx}
.dish{display:flex;justify-content:space-between;align-items:center;padding:16rpx 0;border-bottom:1px solid #f3f3f3}
.dish:last-child{border-bottom:none}
.dish-left{display:flex;align-items:center;gap:16rpx}
.dish-thumb{width:72rpx;height:72rpx;border-radius:12rpx;background:#eee}
.dish-meta{display:flex;flex-direction:column}
.dish-name{font-size:28rpx;color:#333}
.dish-sub{font-size:22rpx;color:#999}
.dish-right{display:flex;align-items:center;gap:10rpx}
.dish-price{font-size:28rpx;color:#111}
.qty-wrap{display:flex;align-items:center;gap:8rpx}
.qty-btn{border:1px solid #ddd;background:#fff;border-radius:999rpx;padding:8rpx 16rpx;font-size:26rpx}
.qty-num{min-width:40rpx;text-align:center;font-size:26rpx;color:#333}
.del-btn{border:none;background:#ff4d4f;color:#fff;border-radius:12rpx;padding:12rpx 16rpx;font-size:24rpx}
.add-btn{margin-top:16rpx;border:1px solid #ff7a45;background:#fff;color:#ff7a45;border-radius:999rpx;padding:18rpx 24rpx;font-size:26rpx}

.summary .row{display:flex;justify-content:space-between;align-items:center;padding:16rpx 0;border-bottom:1px solid #f3f3f3;color:#333}
.summary .row:last-child{border-bottom:none}
.summary .link{color:#ff7a45}
.summary .strong view{font-weight:600}

.footer{position:fixed;left:0;right:0;bottom:0;display:flex;gap:12rpx;align-items:center;padding:16rpx 24rpx;background:transparent}
.total-pill{flex:1;background:#333;color:#fff;border-radius:999rpx;padding:18rpx 24rpx;font-size:28rpx}
.pay-btn{background:#ff7a45;color:#fff;border:none;border-radius:999rpx;padding:18rpx 32rpx;font-size:28rpx}

.remark-wrap{padding:0 24rpx;margin-top:16rpx}
.remark{background:#fff;border-radius:16rpx;padding:18rpx;font-size:26rpx;color:#333}
.info-edit{margin-top:12rpx;display:flex;gap:12rpx}
.edit-input{flex:1;background:#fff;border:1px solid #eee;border-radius:12rpx;padding:16rpx;font-size:26rpx;color:#333}
