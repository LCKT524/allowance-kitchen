<view class="container">
  <view class="section">
    <view>订单：{{order.id}}（{{order.status}}） 总价：￥{{order.total_price}}</view>
    <view wx:for="{{items}}" wx:key="id" class="line">{{item.quantity}} x {{item.menu_id}} 单价￥{{item.unit_price}}</view>
  </view>
  <view class="section">
    <view class="messages" wx:for="{{messages}}" wx:key="id">{{item.sender_id}}：{{item.content}}</view>
    <form bindsubmit="send">
      <input name="content" placeholder="输入消息" class="input"/>
      <button formType="submit">发送</button>
    </form>
  </view>
</view>