<view class="container">
  <view class="section">
    <view>订单：{{order.id}}（{{order.status}}） 总价：￥{{order.total_price}}</view>
    <view wx:if="{{loading}}">加载中...</view>
    <view wx:else>
      <view wx:for="{{items}}" wx:key="id" class="line">{{item.quantity}} x {{item.menu_name}}（{{item.menu_category}}） 单价￥{{item.unit_price}}</view>
    </view>
  </view>
  <view class="section">
    <scroll-view class="msgbox" scroll-y="true" scroll-into-view="{{lastId}}" style="height: 400rpx;">
      <view id="top"></view>
      <view wx:for="{{messages}}" wx:key="id" id="{{item.id}}" class="message">{{item.sender_id}}：{{item.content}}</view>
    </scroll-view>
    <form bindsubmit="send">
      <input name="content" placeholder="输入消息" class="input"/>
      <button formType="submit">发送</button>
    </form>
  </view>
</view>